{
  "documentInfo": {
    "title": "Realm of Eternity - UE5 Audio & Sound Specification",
    "version": "1.0.0",
    "game": "Realm of Eternity",
    "engine": "Unreal Engine 5",
    "audioMiddleware": "MetaSounds / Wwise (optional)",
    "lastUpdated": "2026-01-07"
  },

  "audioArchitecture": {
    "overview": "Comprehensive audio system using UE5 MetaSounds with optional Wwise integration for advanced features",

    "namingConventions": {
      "music": "MUS_{Zone/Context}_{Variant}",
      "ambience": "AMB_{Zone}_{Layer}",
      "sfx": "SFX_{Category}_{Action}_{Variant}",
      "voice": "VO_{Character}_{Context}_{Line}",
      "ui": "UI_{Element}_{Action}",
      "examples": [
        "MUS_Kingshold_Day",
        "AMB_Forest_Birds",
        "SFX_Combat_Sword_Hit_01",
        "VO_Aldric_Greeting_01",
        "UI_Button_Click"
      ]
    },

    "audioChannels": {
      "master": {
        "name": "Master",
        "defaultVolume": 1.0,
        "children": ["music", "sfx", "voice", "ambient", "ui"]
      },
      "music": {
        "name": "Music",
        "defaultVolume": 0.7,
        "ducking": { "trigger": "dialogue", "amount": 0.4 }
      },
      "sfx": {
        "name": "Sound Effects",
        "defaultVolume": 0.8,
        "subcategories": ["combat", "skills", "environment", "footsteps", "impacts"]
      },
      "voice": {
        "name": "Voice/Dialogue",
        "defaultVolume": 1.0,
        "priority": "high"
      },
      "ambient": {
        "name": "Ambient",
        "defaultVolume": 0.6,
        "subcategories": ["environment", "weather", "creatures"]
      },
      "ui": {
        "name": "UI",
        "defaultVolume": 0.5,
        "nonPositional": true
      }
    },

    "technicalSpecs": {
      "sampleRate": 48000,
      "bitDepth": 16,
      "format": "OGG Vorbis",
      "musicFormat": "OGG Vorbis (streaming)",
      "maxConcurrentSounds": 64,
      "virtualVoices": 128,
      "attenuationModel": "logarithmic",
      "defaultAttenuationRadius": {
        "min": 100,
        "max": 3000
      }
    }
  },

  "musicSystem": {
    "overview": "Dynamic music system with seamless transitions based on game state and location",

    "musicStates": {
      "exploration": {
        "description": "Default state when exploring the world",
        "layers": ["melody", "harmony", "percussion_light"],
        "intensity": 0.5,
        "transitionTime": 3.0
      },
      "combat": {
        "description": "Triggered when entering combat",
        "layers": ["melody_intense", "harmony", "percussion_heavy", "brass"],
        "intensity": 1.0,
        "transitionTime": 1.0,
        "exitDelay": 5.0
      },
      "boss": {
        "description": "Special music for boss encounters",
        "layers": ["full_orchestra", "choir"],
        "intensity": 1.0,
        "transitionTime": 0.5,
        "phaseTransitions": true
      },
      "stealth": {
        "description": "Subterfuge skill active",
        "layers": ["melody_tense", "percussion_minimal"],
        "intensity": 0.3,
        "transitionTime": 2.0
      },
      "death": {
        "description": "Player death",
        "oneShot": true,
        "fadeOutOther": true
      },
      "victory": {
        "description": "Quest complete or boss defeated",
        "oneShot": true,
        "duration": 8
      }
    },

