          ]
        }
      ]
    },

    "settings": {
      "widget": "WBP_Menu_Settings",
      "type": "overlay",
      "pausesGame": true,
      "size": { "width": 800, "height": 600 },
      "tabs": [
        {
          "name": "Graphics",
          "settings": [
            { "id": "resolution", "type": "dropdown" },
            { "id": "windowMode", "type": "dropdown", "options": ["fullscreen", "borderless", "windowed"] },
            { "id": "vsync", "type": "toggle" },
            { "id": "frameRateCap", "type": "slider", "range": [30, 240] },
            { "id": "overallQuality", "type": "dropdown", "options": ["low", "medium", "high", "ultra", "custom"] },
            { "id": "textureQuality", "type": "dropdown" },
            { "id": "shadowQuality", "type": "dropdown" },
            { "id": "effectsQuality", "type": "dropdown" },
            { "id": "viewDistance", "type": "slider" },
            { "id": "antiAliasing", "type": "dropdown" },
            { "id": "ambientOcclusion", "type": "toggle" },
            { "id": "motionBlur", "type": "toggle" },
            { "id": "bloom", "type": "toggle" }
          ]
        },
        {
          "name": "Audio",
          "settings": [
            { "id": "masterVolume", "type": "slider", "range": [0, 100] },
            { "id": "musicVolume", "type": "slider", "range": [0, 100] },
            { "id": "sfxVolume", "type": "slider", "range": [0, 100] },
            { "id": "voiceVolume", "type": "slider", "range": [0, 100] },
            { "id": "ambientVolume", "type": "slider", "range": [0, 100] },
            { "id": "muteWhenUnfocused", "type": "toggle" },
            { "id": "audioDevice", "type": "dropdown" }
          ]
        },
        {
          "name": "Controls",
          "settings": [
            { "id": "keybindings", "type": "keybind_list" },
            { "id": "mouseSensitivity", "type": "slider" },
            { "id": "invertMouseY", "type": "toggle" },
            { "id": "cameraSmoothing", "type": "slider" },
            { "id": "controllerSupport", "type": "toggle" },
            { "id": "controllerDeadzone", "type": "slider" }
          ]
        },
        {
          "name": "Gameplay",
          "settings": [
            { "id": "difficulty", "type": "dropdown" },
            { "id": "autoLoot", "type": "toggle" },
            { "id": "combatMode", "type": "dropdown", "options": ["click_to_attack", "auto_retaliate"] },
            { "id": "showDamageNumbers", "type": "toggle" },
            { "id": "showOtherPlayerNames", "type": "toggle" },
            { "id": "profanityFilter", "type": "toggle" },
            { "id": "tutorialHints", "type": "toggle" }
          ]
        },
        {
          "name": "Interface",
          "settings": [
            { "id": "uiScale", "type": "slider", "range": [0.75, 1.5] },
            { "id": "hudOpacity", "type": "slider", "range": [0.5, 1.0] },
            { "id": "minimapSize", "type": "slider" },
            { "id": "minimapRotation", "type": "toggle" },
            { "id": "chatFontSize", "type": "dropdown" },
            { "id": "showClock", "type": "dropdown", "options": ["off", "game_time", "real_time", "both"] },
            { "id": "colorblindMode", "type": "dropdown", "options": ["off", "protanopia", "deuteranopia", "tritanopia"] }
          ]
        },
        {
          "name": "Social",
          "settings": [
            { "id": "acceptTradeRequests", "type": "dropdown", "options": ["everyone", "friends_only", "nobody"] },
