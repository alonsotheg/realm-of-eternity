    "bank": {
      "widget": "WBP_Menu_Bank",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 900, "height": 700 },
      "components": [
        {
          "name": "BankTabs",
          "tabCount": 10,
          "customTabNames": true,
          "tabIcons": true
