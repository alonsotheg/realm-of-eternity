    "grandExchange": {
      "widget": "WBP_Menu_GrandExchange",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 900, "height": 600 },
      "components": [
        {
          "name": "SearchPanel",
          "features": [
            "Item search bar",
            "Category filters",
            "Recent searches",
            "Price history graph"
          ]
        },
        {
          "name": "BuySlots",
          "slotCount": 8,
