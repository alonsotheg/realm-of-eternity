    "beastslayer": {
      "widget": "WBP_Menu_Beastslayer",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 700, "height": 500 },
      "components": [
        {
          "name": "CurrentTask",
          "features": [
            "Target creature",
            "Kill count progress",
            "Location hint",
            "Rewards",
            "Cancel task option"
          ]
        },
        {
          "name": "MasterInfo",
          "features": [
            "Current master",
            "Tasks completed",
            "Streak bonus",
            "Points earned"
          ]
        },
        {
          "name": "PointsShop",
          "features": [
            "Purchasable rewards",
            "Unlockable abilities",
            "Cosmetic items"
          ]
        },
        {
          "name": "BestiaryPreview",
          "features": [
            "Creature image",
            "Combat level",
            "Weakness info",
            "Drop table preview"
          ]
