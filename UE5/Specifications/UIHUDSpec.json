{
  "documentInfo": {
    "title": "Realm of Eternity - UE5 UI/HUD Specification",
    "version": "1.0.0",
    "game": "Realm of Eternity",
    "engine": "Unreal Engine 5",
    "lastUpdated": "2026-01-07"
  },

  "uiFramework": {
    "overview": "Complete UI system using UMG (Unreal Motion Graphics) with modular widget architecture",

    "designPrinciples": [
      "Responsive layout supporting 16:9, 21:9, and 4:3 aspect ratios",
      "Scalable UI from 1080p to 4K",
      "Controller and keyboard/mouse support",
      "Consistent visual language across all interfaces",
      "Minimal screen clutter during gameplay"
    ],

    "namingConventions": {
      "widgets": "WBP_{Category}_{Name}",
      "materials": "M_UI_{Category}_{Name}",
      "textures": "T_UI_{Category}_{Name}",
      "animations": "UIAnim_{Widget}_{Action}",
      "examples": [
        "WBP_HUD_HealthBar",
        "WBP_Menu_Inventory",
        "M_UI_Panel_Default",
        "T_UI_Icon_Sword",
        "UIAnim_HealthBar_Damage"
      ]
    },

    "colorPalette": {
      "primary": { "r": 0.18, "g": 0.12, "b": 0.08, "a": 0.9 },
      "secondary": { "r": 0.25, "g": 0.18, "b": 0.12, "a": 0.85 },
      "accent": { "r": 0.85, "g": 0.7, "b": 0.4, "a": 1.0 },
      "highlight": { "r": 1.0, "g": 0.85, "b": 0.5, "a": 1.0 },
      "health": { "r": 0.8, "g": 0.15, "b": 0.15, "a": 1.0 },
      "mana": { "r": 0.15, "g": 0.4, "b": 0.85, "a": 1.0 },
      "devotion": { "r": 0.9, "g": 0.8, "b": 0.3, "a": 1.0 },
      "stamina": { "r": 0.2, "g": 0.75, "b": 0.25, "a": 1.0 },
      "xp": { "r": 0.6, "g": 0.4, "b": 0.9, "a": 1.0 },
      "text": {
        "primary": { "r": 0.95, "g": 0.9, "b": 0.8, "a": 1.0 },
        "secondary": { "r": 0.7, "g": 0.65, "b": 0.55, "a": 1.0 },
        "disabled": { "r": 0.5, "g": 0.45, "b": 0.4, "a": 0.6 }
      },
      "rarity": {
        "common": { "r": 0.7, "g": 0.7, "b": 0.7, "a": 1.0 },
        "uncommon": { "r": 0.2, "g": 0.8, "b": 0.2, "a": 1.0 },
        "rare": { "r": 0.2, "g": 0.4, "b": 1.0, "a": 1.0 },
        "epic": { "r": 0.6, "g": 0.2, "b": 1.0, "a": 1.0 },
        "legendary": { "r": 1.0, "g": 0.6, "b": 0.0, "a": 1.0 }
      }
    },

    "typography": {
      "fonts": {
        "title": {
          "family": "MedievalSharp",
          "sizes": { "large": 48, "medium": 36, "small": 28 }
        },
        "heading": {
          "family": "Cinzel",
          "sizes": { "h1": 32, "h2": 26, "h3": 22 }
        },
        "body": {
          "family": "OpenSans",
          "sizes": { "large": 18, "medium": 16, "small": 14, "tiny": 12 }
        },
        "numbers": {
          "family": "RobotoMono",
          "sizes": { "large": 24, "medium": 18, "small": 14 }
        }
      },
      "shadows": {
        "enabled": true,
        "offset": { "x": 2, "y": 2 },
        "blur": 2,
        "color": { "r": 0, "g": 0, "b": 0, "a": 0.5 }
      }
    }
  },

  "hudSystem": {
    "overview": "Main gameplay HUD visible during normal play",

    "mainHUD": {
      "widget": "WBP_HUD_Main",
      "zOrder": 0,
      "components": [
        {
          "name": "HealthBar",
          "widget": "WBP_HUD_HealthBar",
          "anchor": "TopLeft",
          "position": { "x": 20, "y": 20 },
          "size": { "width": 250, "height": 30 },
          "features": [
            "Current/max health display",
            "Damage flash animation",
            "Heal animation",
            "Poison/burn indicator overlay",
            "Low health warning pulse"
          ]
        },
        {
          "name": "ResourceBars",
          "widget": "WBP_HUD_ResourceBars",
          "anchor": "TopLeft",
          "position": { "x": 20, "y": 55 },
          "size": { "width": 250, "height": 60 },
          "bars": [
            {
              "type": "mana",
              "color": "mana",
              "showNumeric": true
            },
            {
              "type": "devotion",
              "color": "devotion",
              "showNumeric": true,
              "conditionalDisplay": "sanctity_active"
            },
            {
              "type": "stamina",
              "color": "stamina",
              "showNumeric": false,
              "conditionalDisplay": "combat_mode"
            }
          ]
        },
        {
          "name": "TargetInfo",
          "widget": "WBP_HUD_TargetInfo",
          "anchor": "TopCenter",
          "position": { "x": 0, "y": 20 },
          "size": { "width": 300, "height": 80 },
          "features": [
            "Target name and level",
            "Target health bar",
            "Combat level indicator",
            "Boss mechanics display",
            "Debuff icons on target"
          ]
        },
        {
          "name": "Minimap",
          "widget": "WBP_HUD_Minimap",
          "anchor": "TopRight",
          "position": { "x": -20, "y": 20 },
          "size": { "width": 200, "height": 200 },
          "features": [
            "Circular map display",
            "Player position and direction",
            "Party member markers",
            "Quest objective markers",
            "Resource node markers (optional)",
            "Enemy dots (optional)",
            "Zoom controls"
          ]
        },
        {
          "name": "ActionBar",
          "widget": "WBP_HUD_ActionBar",
          "anchor": "BottomCenter",
          "position": { "x": 0, "y": -20 },
          "size": { "width": 600, "height": 60 },
          "features": [
            "12 action slots (keyboard 1-9, 0, -, =)",
            "Drag-and-drop ability placement",
            "Cooldown display",
            "Keybind labels",
            "Additional bar toggle (14 more slots)"
          ]
        },
        {
          "name": "QuickPrayers",
          "widget": "WBP_HUD_QuickBlessings",
          "anchor": "BottomCenter",
          "position": { "x": 0, "y": -85 },
          "size": { "width": 400, "height": 40 },
          "features": [
            "Quick blessing toggle buttons",
            "Devotion cost indicators",
            "Active blessing highlights"
          ]
        },
        {
          "name": "ChatBox",
          "widget": "WBP_HUD_ChatBox",
          "anchor": "BottomLeft",
          "position": { "x": 20, "y": -20 },
          "size": { "width": 400, "height": 200 },
          "features": [
            "Multiple chat channels (local, global, trade, clan, private)",
            "Channel tabs",
            "Scrollable history",
            "Clickable player names",
            "Emoji support",
            "Auto-hide when inactive"
          ]
        },
        {
          "name": "BuffDebuffBar",
          "widget": "WBP_HUD_BuffBar",
          "anchor": "TopLeft",
          "position": { "x": 20, "y": 130 },
          "size": { "width": 400, "height": 80 },
          "features": [
            "Active buff icons",
            "Active debuff icons",
            "Duration timers",
            "Stack counts",
            "Tooltip on hover"
          ]
        },
        {
          "name": "QuestTracker",
          "widget": "WBP_HUD_QuestTracker",
          "anchor": "Right",
          "position": { "x": -20, "y": 0 },
          "size": { "width": 300, "height": 400 },
          "features": [
            "Active quest list (max 5 tracked)",
            "Objective checkboxes",
            "Progress counters",
            "Click to view quest details",
            "Minimize/expand toggle"
          ]
        },
        {
          "name": "XPBar",
          "widget": "WBP_HUD_XPBar",
          "anchor": "Bottom",
          "position": { "x": 0, "y": 0 },
          "size": { "width": "100%", "height": 10 },
          "features": [
            "Current XP progress",
            "XP gain animation",
            "Level display",
            "Hover for exact numbers"
          ]
        }
      ]
    },

    "combatHUD": {
      "widget": "WBP_HUD_Combat",
      "zOrder": 1,
      "activationCondition": "in_combat",
      "components": [
        {
          "name": "ComboCounter",
          "widget": "WBP_HUD_ComboCounter",
          "anchor": "Center",
          "position": { "x": 200, "y": -100 },
          "features": [
            "Current combo count",
            "Combo multiplier",
            "Combo timer",
            "Break animation"
          ]
        },
        {
          "name": "DamageNumbers",
          "widget": "WBP_HUD_DamageNumbers",
          "worldSpace": true,
          "features": [
            "Floating damage numbers",
            "Critical hit styling",
            "Heal numbers",
            "XP gain popups"
          ]
        },
        {
          "name": "Crosshair",
          "widget": "WBP_HUD_Crosshair",
          "anchor": "Center",
          "conditionalDisplay": "ranged_weapon_equipped",
          "variants": ["dot", "cross", "circle", "custom"]
        }
      ]
    },

    "skillHUD": {
      "widget": "WBP_HUD_Skill",
      "zOrder": 1,
      "activationCondition": "skilling_active",
      "components": [
        {
          "name": "SkillProgress",
          "widget": "WBP_HUD_SkillProgress",
          "anchor": "TopCenter",
          "position": { "x": 0, "y": 100 },
          "size": { "width": 300, "height": 60 },
          "features": [
            "Current skill action progress bar",
            "Action name display",
            "Cancel button",
            "Success/failure feedback"
          ]
        },
        {
          "name": "ResourceGathered",
          "widget": "WBP_HUD_ResourceGathered",
          "anchor": "Center",
          "position": { "x": 0, "y": 50 },
          "features": [
            "Item gained popup",
            "XP gained display",
            "Rare item special effect"
          ]
        }
      ]
    }
  },

  "menuSystem": {
    "overview": "Full-screen and overlay menus for game systems",

    "mainMenu": {
      "widget": "WBP_Menu_Main",
      "type": "fullscreen",
      "background": "animated_scene",
      "components": [
        {
          "name": "Logo",
          "anchor": "TopCenter",
          "animation": "fade_in_scale"
        },
        {
          "name": "MenuButtons",
          "buttons": [
            { "text": "Continue", "action": "load_last_save", "conditionalDisplay": "has_save" },
            { "text": "New Game", "action": "open_character_creation" },
            { "text": "Load Game", "action": "open_load_menu" },
            { "text": "Settings", "action": "open_settings" },
            { "text": "Credits", "action": "open_credits" },
            { "text": "Quit", "action": "quit_game" }
          ]
        },
        {
          "name": "VersionInfo",
          "anchor": "BottomRight",
          "display": "version_build_date"
        }
      ]
    },

    "pauseMenu": {
      "widget": "WBP_Menu_Pause",
      "type": "overlay",
      "pausesGame": true,
      "backgroundBlur": 5,
      "components": [
        {
          "name": "MenuButtons",
          "buttons": [
            { "text": "Resume", "action": "close_menu" },
            { "text": "Inventory", "action": "open_inventory" },
            { "text": "Skills", "action": "open_skills" },
            { "text": "Quests", "action": "open_quests" },
            { "text": "Map", "action": "open_map" },
            { "text": "Settings", "action": "open_settings" },
            { "text": "Main Menu", "action": "return_to_main", "confirmRequired": true }
          ]
        }
      ]
    },

    "inventory": {
      "widget": "WBP_Menu_Inventory",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 800, "height": 600 },
      "components": [
        {
          "name": "EquipmentPanel",
          "position": "left",
          "slots": [
            { "slot": "helmet", "position": { "x": 100, "y": 20 } },
            { "slot": "cape", "position": { "x": 180, "y": 20 } },
            { "slot": "amulet", "position": { "x": 100, "y": 80 } },
            { "slot": "weapon_main", "position": { "x": 20, "y": 140 } },
            { "slot": "body", "position": { "x": 100, "y": 140 } },
            { "slot": "weapon_off", "position": { "x": 180, "y": 140 } },
            { "slot": "legs", "position": { "x": 100, "y": 220 } },
            { "slot": "gloves", "position": { "x": 20, "y": 220 } },
            { "slot": "boots", "position": { "x": 180, "y": 220 } },
            { "slot": "ring_left", "position": { "x": 20, "y": 280 } },
            { "slot": "ring_right", "position": { "x": 180, "y": 280 } },
            { "slot": "quiver", "position": { "x": 100, "y": 280 } }
          ],
          "characterPreview": {
            "enabled": true,
            "rotatable": true,
            "position": "center"
          }
        },
        {
          "name": "BackpackGrid",
          "position": "right",
          "gridSize": { "columns": 7, "rows": 4 },
          "slotSize": 50,
          "features": [
            "Drag and drop items",
            "Right-click context menu",
            "Double-click to equip/use",
            "Shift-click to split stacks",
            "Sort button"
          ]
        },
        {
          "name": "ItemTooltip",
          "features": [
            "Item name and rarity",
            "Item icon",
            "Stats comparison",
            "Item description",
            "Requirements",
            "Value"
          ]
        },
        {
          "name": "CurrencyDisplay",
          "position": "bottom",
          "currencies": ["gold", "silver", "copper", "premium"]
        }
      ]
    },

    "skills": {
      "widget": "WBP_Menu_Skills",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 900, "height": 700 },
      "components": [
        {
          "name": "SkillGrid",
          "layout": "grid",
          "skillCategories": [
            {
              "category": "Combat",
              "skills": ["attack", "strength", "defence", "constitution", "ranged", "magic"]
            },
            {
              "category": "Gathering",
              "skills": ["mining", "woodcutting", "fishing", "farming", "hunter"]
            },
            {
              "category": "Artisan",
              "skills": ["smithing", "crafting", "bowcraft", "cooking", "alchemy", "glyphcraft"]
            },
            {
              "category": "Support",
              "skills": ["sanctity", "bonding", "aethertap", "delving", "subterfuge", "firemaking", "construction", "agility"]
            }
          ],
          "skillTile": {
            "showIcon": true,
            "showLevel": true,
            "showXpBar": true,
            "clickAction": "open_skill_detail"
          }
        },
        {
          "name": "SkillDetail",
          "position": "right_panel",
          "features": [
            "Skill name and icon",
            "Current level and XP",
            "XP to next level",
            "Total XP earned",
            "Unlocks list",
            "Training methods"
          ]
        },
        {
          "name": "TotalLevel",
          "position": "top",
          "display": "Total Level: {sum_of_all_skills}"
        }
      ]
    },

    "questLog": {
      "widget": "WBP_Menu_QuestLog",
      "type": "overlay",
      "pausesGame": false,
      "size": { "width": 800, "height": 600 },
      "components": [
        {
          "name": "QuestCategories",
          "position": "left",
          "tabs": ["Active", "Completed", "All"],
          "filters": ["main_story", "side_quest", "daily", "weekly", "beastslayer"]
        },
        {
          "name": "QuestList",
          "position": "center",
          "features": [
            "Quest name",
            "Difficulty indicator",
            "Progress percentage",
            "Track/untrack toggle"
          ]
        },
        {
          "name": "QuestDetail",
          "position": "right",
          "features": [
            "Quest title",
            "Quest giver",
            "Quest description",
            "Objectives list",
            "Rewards preview",
            "Location hint"
          ]
        }
      ]
    },

    "worldMap": {
      "widget": "WBP_Menu_WorldMap",
      "type": "fullscreen",
      "pausesGame": false,
      "components": [
        {
          "name": "MapCanvas",
          "features": [
            "Pan and zoom controls",
            "Zone labels",
            "Discovered/undiscovered areas",
            "Fast travel points",
            "Quest markers",
            "Party member locations",
            "Custom waypoints"
          ]
        },
        {
          "name": "ZoneInfo",
          "position": "sidebar",
          "features": [
            "Zone name",
            "Recommended level",
            "Zone type",
            "Resources available",
            "Key NPCs"
          ]
        },
        {
          "name": "Legend",
          "position": "bottom",
          "toggleable": true
        }
      ]
