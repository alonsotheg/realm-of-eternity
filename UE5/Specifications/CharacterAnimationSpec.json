          "lod0": 65000,
          "lod1": 32000,
          "lod2": 16000,
          "lod3": 8000
        },
        "skeleton": "SKL_Humanoid_Base"
      },

      "characterBlueprint": {
        "name": "BP_PlayerCharacter",
        "parentClass": "ACharacter",
        "components": [
          {
            "name": "SkeletalMeshComponent",
            "type": "USkeletalMeshComponent",
            "purpose": "Main character mesh"
          },
          {
            "name": "CameraArm",
            "type": "USpringArmComponent",
            "settings": {
              "targetArmLength": 400,
              "socketOffset": { "x": 0, "y": 0, "z": 80 },
              "cameraLag": true,
              "lagSpeed": 10
            }
          },
          {
            "name": "FollowCamera",
            "type": "UCameraComponent",
            "settings": {
              "fieldOfView": 90,
              "autoActivate": true
            }
          },
          {
            "name": "EquipmentMeshSlots",
            "type": "USkeletalMeshComponent[]",
            "slots": [
              "helmet", "cape", "amulet", "body", "legs", "gloves", "boots",
              "weapon_main", "weapon_off", "ring_left", "ring_right", "quiver"
