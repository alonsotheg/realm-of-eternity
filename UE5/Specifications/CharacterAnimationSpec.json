          },
          {
            "name": "InteractionSphere",
            "type": "USphereComponent",
            "radius": 200,
            "purpose": "NPC and object interaction detection"
          }
        ]
      },

      "characterStats": {
        "baseMovementSpeed": 600,
        "sprintMultiplier": 1.5,
        "jumpHeight": 420,
        "turnRate": 150,
        "capsuleRadius": 42,
