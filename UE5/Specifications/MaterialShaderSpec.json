{
  "meta": {
    "version": "1.0.0",
    "description": "Material and shader specification for Realm of Eternity UE5",
    "unrealVersion": "5.3",
    "renderPipeline": "deferred"
  },
  "masterMaterials": {
    "description": "Base master materials for all game assets",
    "materials": [
      {
        "name": "M_Character_Master",
        "description": "Master material for all character meshes",
        "domain": "surface",
        "blendMode": "opaque",
        "shadingModel": "defaultLit",
        "features": ["subsurfaceScattering", "clearCoat", "emissive"],
        "parameters": [
          { "name": "BaseColor", "type": "texture2D", "default": "T_Default_D" },
          { "name": "Normal", "type": "texture2D", "default": "T_Default_N" },
          { "name": "ORM", "type": "texture2D", "default": "T_Default_ORM", "description": "Occlusion/Roughness/Metallic packed" },
          { "name": "Emissive", "type": "texture2D", "default": "T_Black" },
          { "name": "EmissiveIntensity", "type": "scalar", "default": 1.0, "range": [0, 100] },
          { "name": "SubsurfaceColor", "type": "vector3", "default": [0.8, 0.3, 0.2] },
          { "name": "SubsurfaceIntensity", "type": "scalar", "default": 0.5, "range": [0, 1] },
          { "name": "TintColor", "type": "vector3", "default": [1, 1, 1] },
          { "name": "DyeColor1", "type": "vector3", "default": [1, 1, 1], "description": "Primary armor dye slot" },
          { "name": "DyeColor2", "type": "vector3", "default": [1, 1, 1], "description": "Secondary armor dye slot" },
          { "name": "DyeMask", "type": "texture2D", "default": "T_Default_DyeMask" }
        ],
        "switches": [
          { "name": "UseEmissive", "default": false },
          { "name": "UseSubsurface", "default": false },
          { "name": "UseDyeSystem", "default": true },
          { "name": "UseDetailNormal", "default": false }
        ]
      },
      {
        "name": "M_Weapon_Master",
        "description": "Master material for weapons",
        "domain": "surface",
        "blendMode": "opaque",
        "shadingModel": "defaultLit",
        "features": ["emissive", "clearCoat"],
        "parameters": [
          { "name": "BaseColor", "type": "texture2D", "default": "T_Default_D" },
          { "name": "Normal", "type": "texture2D", "default": "T_Default_N" },
          { "name": "ORM", "type": "texture2D", "default": "T_Default_ORM" },
          { "name": "Emissive", "type": "texture2D", "default": "T_Black" },
          { "name": "EmissiveIntensity", "type": "scalar", "default": 1.0 },
          { "name": "EnchantGlowColor", "type": "vector3", "default": [0.5, 0.8, 1.0] },
          { "name": "EnchantGlowIntensity", "type": "scalar", "default": 0.0, "range": [0, 10] },
          { "name": "BladeSharpness", "type": "scalar", "default": 0.8, "range": [0, 1] },
          { "name": "WearAmount", "type": "scalar", "default": 0.0, "range": [0, 1] }
        ],
        "switches": [
          { "name": "UseEnchantGlow", "default": false },
          { "name": "UsePoisonEffect", "default": false },
          { "name": "UseBloodEffect", "default": false }
        ]
      },
      {
        "name": "M_Environment_Master",
        "description": "Master material for environment props",
        "domain": "surface",
        "blendMode": "opaque",
        "shadingModel": "defaultLit",
        "features": ["worldPositionOffset", "tessellation"],
        "parameters": [
          { "name": "BaseColor", "type": "texture2D", "default": "T_Default_D" },
          { "name": "Normal", "type": "texture2D", "default": "T_Default_N" },
          { "name": "ORM", "type": "texture2D", "default": "T_Default_ORM" },
          { "name": "DetailBaseColor", "type": "texture2D", "default": "T_Default_D" },
          { "name": "DetailNormal", "type": "texture2D", "default": "T_Default_N" },
          { "name": "DetailTiling", "type": "scalar", "default": 4.0 },
          { "name": "DetailBlend", "type": "scalar", "default": 0.5, "range": [0, 1] },
          { "name": "MossAmount", "type": "scalar", "default": 0.0, "range": [0, 1] },
          { "name": "MossColor", "type": "texture2D", "default": "T_Moss_D" },
          { "name": "SnowAmount", "type": "scalar", "default": 0.0, "range": [0, 1] },
          { "name": "WetnessAmount", "type": "scalar", "default": 0.0, "range": [0, 1] }
        ],
        "switches": [
          { "name": "UseDetailTextures", "default": true },
          { "name": "UseMossOverlay", "default": false },
          { "name": "UseSnowOverlay", "default": false },
          { "name": "UseWetness", "default": false },
          { "name": "UseWindAnimation", "default": false }
        ]
      },
      {
        "name": "M_Terrain_Master",
        "description": "Master landscape material with layer blending",
        "domain": "surface",
        "blendMode": "opaque",
        "shadingModel": "defaultLit",
        "features": ["tessellation", "virtualTexturing"],
        "maxLayers": 16,
        "parameters": [
          { "name": "Layer_Grass", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Dirt", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Rock", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Sand", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Snow", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Mud", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Gravel", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "Layer_Cobblestone", "type": "materialLayer", "textures": ["BaseColor", "Normal", "ORM"] },
          { "name": "HeightBlendSharpness", "type": "scalar", "default": 0.5 },
          { "name": "TessellationMultiplier", "type": "scalar", "default": 1.0 },
          { "name": "DisplacementScale", "type": "scalar", "default": 10.0 }
        ],
        "switches": [
          { "name": "UseTessellation", "default": true },
          { "name": "UseHeightBlend", "default": true },
          { "name": "UseRVT", "default": true },
          { "name": "UsePuddles", "default": false }
        ]
      },
      {
        "name": "M_Foliage_Master",
        "description": "Master material for vegetation",
        "domain": "surface",
        "blendMode": "masked",
        "shadingModel": "twoSidedFoliage",
        "features": ["subsurfaceScattering", "worldPositionOffset"],
        "parameters": [
          { "name": "BaseColor", "type": "texture2D", "default": "T_Default_D" },
          { "name": "Normal", "type": "texture2D", "default": "T_Default_N" },
          { "name": "OpacityMask", "type": "texture2D", "default": "T_Default_Mask" },
          { "name": "SubsurfaceColor", "type": "vector3", "default": [0.2, 0.6, 0.1] },
          { "name": "SubsurfaceIntensity", "type": "scalar", "default": 0.8 },
          { "name": "WindStrength", "type": "scalar", "default": 1.0 },
          { "name": "WindSpeed", "type": "scalar", "default": 1.0 },
          { "name": "WindTurbulence", "type": "scalar", "default": 0.5 },
          { "name": "SeasonTint", "type": "vector3", "default": [1, 1, 1] },
          { "name": "HealthTint", "type": "scalar", "default": 1.0, "description": "0=dead/brown, 1=healthy/green" }
        ],
        "switches": [
          { "name": "UseWind", "default": true },
          { "name": "UseSeasonalTint", "default": true },
          { "name": "UseBillboard", "default": false }
        ]
      },
      {
        "name": "M_Water_Master",
        "description": "Master material for water surfaces",
        "domain": "surface",
        "blendMode": "translucent",
        "shadingModel": "defaultLit",
        "features": ["refraction", "reflection", "sceneDepthFade"],
        "parameters": [
          { "name": "WaterColor", "type": "vector3", "default": [0.02, 0.08, 0.15] },
          { "name": "WaterColorDeep", "type": "vector3", "default": [0.01, 0.03, 0.08] },
          { "name": "DepthFade", "type": "scalar", "default": 100 },
          { "name": "Opacity", "type": "scalar", "default": 0.8 },
          { "name": "NormalMap1", "type": "texture2D", "default": "T_Water_N1" },
          { "name": "NormalMap2", "type": "texture2D", "default": "T_Water_N2" },
          { "name": "NormalScale", "type": "scalar", "default": 0.5 },
          { "name": "WaveSpeed", "type": "scalar", "default": 0.05 },
          { "name": "WaveScale", "type": "scalar", "default": 1.0 },
          { "name": "RefractionStrength", "type": "scalar", "default": 0.1 },
          { "name": "FresnelPower", "type": "scalar", "default": 5.0 },
          { "name": "FoamTexture", "type": "texture2D", "default": "T_Foam" },
          { "name": "FoamAmount", "type": "scalar", "default": 0.5 },
          { "name": "FoamDepthFade", "type": "scalar", "default": 50 },
          { "name": "CausticsTexture", "type": "texture2D", "default": "T_Caustics" },
          { "name": "CausticsIntensity", "type": "scalar", "default": 0.3 }
        ],
        "switches": [
          { "name": "UseFoam", "default": true },
          { "name": "UseCaustics", "default": true },
          { "name": "UseFlowMap", "default": false },
          { "name": "UseSSR", "default": true }
        ]
      },
      {
        "name": "M_VFX_Master",
        "description": "Master material for visual effects",
        "domain": "surface",
        "blendMode": "additive",
        "shadingModel": "unlit",
        "features": ["particleColor", "dynamicParameter"],
        "parameters": [
          { "name": "MainTexture", "type": "texture2D", "default": "T_Default_Particle" },
          { "name": "ColorTint", "type": "vector3", "default": [1, 1, 1] },
          { "name": "Intensity", "type": "scalar", "default": 1.0 },
          { "name": "SoftParticleDepth", "type": "scalar", "default": 10 },
          { "name": "DistortionStrength", "type": "scalar", "default": 0.0 },
          { "name": "ErosionAmount", "type": "scalar", "default": 0.0 },
          { "name": "NoiseTexture", "type": "texture2D", "default": "T_Noise" },
          { "name": "NoiseScale", "type": "scalar", "default": 1.0 },
          { "name": "PanSpeed", "type": "vector2", "default": [0, 0] }
        ],
        "switches": [
          { "name": "UseSoftParticles", "default": true },
          { "name": "UseDistortion", "default": false },
          { "name": "UseErosion", "default": false },
          { "name": "UseNoise", "default": false }
        ],
        "variants": [
          { "name": "M_VFX_Additive", "blendMode": "additive" },
          { "name": "M_VFX_Translucent", "blendMode": "translucent" },
          { "name": "M_VFX_Modulate", "blendMode": "modulate" }
        ]
      },
      {
        "name": "M_UI_Master",
        "description": "Master material for UI elements",
        "domain": "userInterface",
        "blendMode": "translucent",
        "shadingModel": "unlit",
        "parameters": [
          { "name": "Texture", "type": "texture2D", "default": "T_White" },
          { "name": "Color", "type": "vector4", "default": [1, 1, 1, 1] },
          { "name": "DesaturationAmount", "type": "scalar", "default": 0.0 },
          { "name": "GlowColor", "type": "vector3", "default": [1, 0.8, 0.2] },
          { "name": "GlowIntensity", "type": "scalar", "default": 0.0 },
          { "name": "OutlineColor", "type": "vector3", "default": [0, 0, 0] },
          { "name": "OutlineWidth", "type": "scalar", "default": 0.0 }
        ],
        "switches": [
          { "name": "UseGlow", "default": false },
          { "name": "UseOutline", "default": false },
          { "name": "UseGrayscale", "default": false }
        ]
      }
    ]
  },
