  "postProcessMaterials": {
    "description": "Post-process effect materials",
    "effects": [
      {
        "name": "PP_Underwater",
        "description": "Underwater distortion and color grading",
        "parameters": [
          { "name": "WarpStrength", "type": "scalar", "default": 0.02 },
          { "name": "WarpSpeed", "type": "scalar", "default": 1.0 },
          { "name": "TintColor", "type": "vector3", "default": [0.3, 0.5, 0.7] },
          { "name": "FogDensity", "type": "scalar", "default": 0.01 }
        ]
      },
      {
        "name": "PP_Poison",
        "description": "Poison screen effect",
        "parameters": [
          { "name": "VignetteIntensity", "type": "scalar", "default": 0.5 },
          { "name": "VignetteColor", "type": "vector3", "default": [0.2, 0.5, 0.1] },
          { "name": "PulseSpeed", "type": "scalar", "default": 2.0 },
          { "name": "DesaturationAmount", "type": "scalar", "default": 0.3 }
        ]
      },
      {
        "name": "PP_LowHealth",
        "description": "Low health warning effect",
        "parameters": [
          { "name": "VignetteIntensity", "type": "scalar", "default": 0.6 },
          { "name": "VignetteColor", "type": "vector3", "default": [0.8, 0.1, 0.1] },
          { "name": "PulseSpeed", "type": "scalar", "default": 1.5 },
          { "name": "ChromaticAberration", "type": "scalar", "default": 0.5 }
        ]
      },
      {
        "name": "PP_Teleport",
        "description": "Teleportation transition effect",
        "parameters": [
          { "name": "WarpAmount", "type": "scalar", "default": 0.0 },
          { "name": "FadeAmount", "type": "scalar", "default": 0.0 },
          { "name": "GlowColor", "type": "vector3", "default": [0.5, 0.8, 1.0] }
        ]
      },
      {
        "name": "PP_NightVision",
        "description": "Night vision/enhanced visibility effect",
        "parameters": [
          { "name": "Brightness", "type": "scalar", "default": 2.0 },
          { "name": "Contrast", "type": "scalar", "default": 1.2 },
          { "name": "TintColor", "type": "vector3", "default": [0.2, 1.0, 0.3] },
          { "name": "NoiseAmount", "type": "scalar", "default": 0.1 }
        ]
      },
      {
        "name": "PP_DrunkBlur",
        "description": "Intoxication/confusion effect",
