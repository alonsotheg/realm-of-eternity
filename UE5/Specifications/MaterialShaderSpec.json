          { "name": "SwayAmount", "type": "scalar", "default": 0.02 },
          { "name": "SwaySpeed", "type": "scalar", "default": 0.5 },
          { "name": "ColorShift", "type": "scalar", "default": 0.1 }
        ]
      }
