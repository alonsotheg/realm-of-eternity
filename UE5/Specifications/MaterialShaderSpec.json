  "shaderComplexity": {
    "description": "Shader complexity budgets by platform",
    "tiers": {
      "high": {
        "maxInstructions": 500,
        "maxTextureSamples": 32,
        "maxInterpolators": 16,
        "features": ["tessellation", "parallaxOcclusion", "subsurfaceScattering", "anisotropicSpecular"]
      },
      "medium": {
        "maxInstructions": 300,
        "maxTextureSamples": 16,
        "maxInterpolators": 12,
        "features": ["normalMapping", "emissive", "basicPBR"]
      },
      "low": {
        "maxInstructions": 150,
        "maxTextureSamples": 8,
        "maxInterpolators": 8,
        "features": ["basicLighting", "diffuseOnly"]
      }
    },
    "autoLOD": {
      "enabled": true,
      "distanceThresholds": [0, 50, 100, 200],
      "qualityLevels": ["high", "high", "medium", "low"]
    }
  },
  "textureStreaming": {
    "description": "Texture streaming configuration",
    "poolSizes": {
      "high": 4096,
      "medium": 2048,
      "low": 1024
    },
    "mipBias": {
      "high": 0,
      "medium": 1,
      "low": 2
    },
    "virtualTexturing": {
      "enabled": true,
      "pageSize": 128,
      "maxResolution": 8192
    }
  },
  "colorGrading": {
    "description": "LUT-based color grading presets",
    "presets": [
      { "name": "Default", "lut": "LUT_Default", "description": "Standard game look" },
      { "name": "Desert", "lut": "LUT_Desert", "description": "Warm, sandy tones" },
      { "name": "Swamp", "lut": "LUT_Swamp", "description": "Murky, green tones" },
      { "name": "Arctic", "lut": "LUT_Arctic", "description": "Cold, blue tones" },
      { "name": "Volcanic", "lut": "LUT_Volcanic", "description": "Hot, orange/red tones" },
      { "name": "Void", "lut": "LUT_Void", "description": "Dark, purple tones" },
      { "name": "Mystical", "lut": "LUT_Mystical", "description": "Ethereal, magical tones" },
      { "name": "Night", "lut": "LUT_Night", "description": "Dark, desaturated" },
      { "name": "Sunset", "lut": "LUT_Sunset", "description": "Golden hour tones" },
      { "name": "Dungeon", "lut": "LUT_Dungeon", "description": "Dark, moody tones" }
    ],
    "blendTime": 2.0
  },
  "optimization": {
    "materialPooling": {
      "enabled": true,
      "maxInstances": 1000
    },
    "shaderCompilation": {
      "asyncLoading": true,
      "psoCache": true,
      "precompileOnLoad": true
    },
    "textureCompression": {
      "diffuse": "BC7",
      "normal": "BC5",
      "masks": "BC4",
      "hdr": "BC6H"
    }
  }
}
