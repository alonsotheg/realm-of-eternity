  },
  "characterMovement": {
    "description": "Character movement physics settings",
    "player": {
      "walkSpeed": 300,
      "runSpeed": 600,
      "sprintSpeed": 800,
      "crouchSpeed": 150,
      "swimSpeed": 400,
      "jumpHeight": 420,
      "airControl": 0.35,
      "groundFriction": 8.0,
      "brakingDecelerationWalking": 2048,
      "brakingDecelerationFalling": 0,
      "maxAcceleration": 2048,
      "rotationRate": 540,
      "canCrouch": true,
      "canJump": true,
      "canSwim": true,
      "canFly": false
    },
    "stamina": {
      "enabled": true,
      "maxStamina": 100,
      "sprintDrain": 10,
      "regenRate": 5,
      "regenDelay": 2.0
    },
    "swimming": {
      "buoyancy": 1.0,
      "waterLineFraction": 0.65,
      "immersionDepthFraction": 0.3,
      "maxUnderwaterTime": 60,
      "drowningDamageRate": 10
    }
  },
  "ragdoll": {
    "description": "Ragdoll physics configuration",
    "enabled": true,
    "blendTime": 0.15,
    "settleTime": 3.0,
    "constraints": {
      "maxAngularLimit": 45,
      "minAngularLimit": -45,
      "swingLimit": 30,
      "twistLimit": 15
    },
    "bodies": [
      { "bone": "pelvis", "shape": "capsule", "mass": 15 },
      { "bone": "spine_01", "shape": "capsule", "mass": 10 },
      { "bone": "spine_02", "shape": "capsule", "mass": 10 },
      { "bone": "spine_03", "shape": "capsule", "mass": 8 },
      { "bone": "head", "shape": "sphere", "mass": 5 },
      { "bone": "upperarm_l", "shape": "capsule", "mass": 3 },
      { "bone": "upperarm_r", "shape": "capsule", "mass": 3 },
      { "bone": "lowerarm_l", "shape": "capsule", "mass": 2 },
      { "bone": "lowerarm_r", "shape": "capsule", "mass": 2 },
      { "bone": "hand_l", "shape": "box", "mass": 1 },
      { "bone": "hand_r", "shape": "box", "mass": 1 },
      { "bone": "thigh_l", "shape": "capsule", "mass": 8 },
      { "bone": "thigh_r", "shape": "capsule", "mass": 8 },
      { "bone": "calf_l", "shape": "capsule", "mass": 4 },
      { "bone": "calf_r", "shape": "capsule", "mass": 4 },
      { "bone": "foot_l", "shape": "box", "mass": 2 },
      { "bone": "foot_r", "shape": "box", "mass": 2 }
    ],
    "deathImpulse": {
      "baseStrength": 500,
      "directionFromDamageSource": true,
      "maxStrength": 2000
    }
  },
  "hitDetection": {
    "description": "Combat hit detection configuration",
    "melee": {
      "method": "sphereSweep",
      "traceChannel": "ECC_Weapon",
      "tickRate": 60,
      "interpolation": true,
      "hitboxes": [
        { "name": "light_attack", "radius": 30, "length": 150, "activeFrames": [8, 12] },
        { "name": "heavy_attack", "radius": 45, "length": 200, "activeFrames": [15, 22] },
        { "name": "cleave", "radius": 60, "length": 180, "arc": 120, "activeFrames": [10, 18] }
      ]
    },
    "ranged": {
      "method": "projectile",
      "traceChannel": "ECC_Projectile",
      "projectiles": [
        { "name": "arrow", "radius": 5, "speed": 5000, "gravity": 0.5, "lifetime": 10 },
        { "name": "bolt", "radius": 3, "speed": 7000, "gravity": 0.3, "lifetime": 8 },
        { "name": "thrown", "radius": 8, "speed": 3000, "gravity": 0.8, "lifetime": 10 }
      ]
    },
    "magic": {
      "method": "varies",
      "spellTypes": [
        { "name": "bolt", "radius": 15, "speed": 4000, "gravity": 0, "lifetime": 5 },
        { "name": "aoe", "radius": 200, "duration": 2.0, "tickRate": 0.5 },
        { "name": "beam", "width": 20, "range": 1000, "duration": 0.5 },
        { "name": "homing", "radius": 20, "speed": 2000, "turnRate": 180, "lifetime": 8 }
      ]
    },
    "hitValidation": {
      "serverAuthoritative": true,
      "maxLatencyCompensation": 200,
      "rewindTime": 100
    }
  },
  "destructibles": {
    "description": "Destructible object physics",
    "enabled": true,
    "categories": [
      {
        "name": "light",
        "health": 50,
        "fractureChunks": 5,
        "debrisLifetime": 5,
        "examples": ["crates", "barrels", "pottery"]
      },
      {
        "name": "medium",
        "health": 200,
        "fractureChunks": 12,
        "debrisLifetime": 10,
        "examples": ["furniture", "doors", "fences"]
      },
      {
        "name": "heavy",
        "health": 1000,
        "fractureChunks": 25,
        "debrisLifetime": 15,
        "examples": ["walls", "pillars", "statues"]
      }
    ],
    "fractureSettings": {
      "minChunkSize": 10,
      "maxChunkSize": 100,
      "chunkPhysicsTimeout": 3.0,
      "fadeOutTime": 2.0
    }
  },
  "cloth": {
    "description": "Cloth simulation settings",
    "enabled": true,
    "simulation": {
      "solver": "pbdCloth",
      "iterations": 5,
      "substeps": 1,
      "maxDistance": 100,
      "backstopDistance": 0.5
    },
    "categories": [
      {
        "name": "cape",
        "stiffness": 0.3,
        "damping": 0.2,
        "gravityScale": 1.0,
        "windResponse": 0.8
      },
      {
        "name": "robe",
        "stiffness": 0.5,
        "damping": 0.3,
        "gravityScale": 1.0,
        "windResponse": 0.5
      },
      {
        "name": "banner",
        "stiffness": 0.2,
        "damping": 0.1,
        "gravityScale": 1.0,
        "windResponse": 1.0
      },
      {
        "name": "hair",
        "stiffness": 0.8,
        "damping": 0.5,
        "gravityScale": 0.5,
        "windResponse": 0.3
      }
    ],
    "collisions": {
      "selfCollision": false,
      "worldCollision": true,
      "characterCollision": true
    }
  },
  "fluids": {
    "description": "Fluid interaction settings",
    "water": {
      "surfaceInteraction": true,
      "rippleRadius": 50,
      "rippleAmplitude": 10,
      "rippleDuration": 2.0,
      "splashParticle": "VFX_WaterSplash",
      "swimParticle": "VFX_WaterRipple"
    },
    "lava": {
      "damage": 50,
      "damageInterval": 0.5,
      "surfaceInteraction": true,
      "splashParticle": "VFX_LavaSplash"
    },
    "swamp": {
      "movementPenalty": 0.5,
      "splashParticle": "VFX_SwampSplash",
      "poisonDamage": 5,
      "poisonInterval": 2.0
    }
  },
  "optimization": {
    "description": "Physics optimization settings",
    "lodPhysics": {
      "enabled": true,
      "distances": [
        { "lod": 0, "distance": 0, "tickRate": 60, "fullSimulation": true },
        { "lod": 1, "distance": 2000, "tickRate": 30, "fullSimulation": true },
        { "lod": 2, "distance": 5000, "tickRate": 15, "fullSimulation": false },
        { "lod": 3, "distance": 10000, "tickRate": 5, "fullSimulation": false }
      ]
    },
    "sleeping": {
      "linearThreshold": 2.0,
      "angularThreshold": 1.0,
      "sleepDelay": 0.4
    },
    "ccd": {
      "enabled": true,
      "minVelocity": 1000,
      "maxObjects": 64
    },
    "broadphase": {
      "algorithm": "MBP",
      "gridSize": 1000,
      "maxObjects": 10000
    }
  }
}
