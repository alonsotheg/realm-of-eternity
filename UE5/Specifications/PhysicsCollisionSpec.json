{
  "meta": {
    "version": "1.0.0",
    "description": "Physics and collision specification for Realm of Eternity UE5",
    "unrealVersion": "5.3"
  },
  "collisionChannels": {
    "description": "Custom collision channels for the game",
    "channels": [
      {
        "name": "ECC_Player",
        "type": "object",
        "defaultResponse": "block",
        "description": "Player character collision"
      },
      {
        "name": "ECC_NPC",
        "type": "object",
        "defaultResponse": "block",
        "description": "Non-player characters (friendly)"
      },
      {
        "name": "ECC_Enemy",
        "type": "object",
        "defaultResponse": "block",
        "description": "Enemy characters"
      },
      {
        "name": "ECC_Projectile",
        "type": "object",
        "defaultResponse": "overlap",
        "description": "Ranged attacks and spells"
      },
      {
        "name": "ECC_Interactable",
        "type": "object",
        "defaultResponse": "overlap",
        "description": "Interactive objects (chests, doors, resources)"
      },
      {
        "name": "ECC_Trigger",
        "type": "object",
        "defaultResponse": "overlap",
        "description": "Trigger volumes (quest, zone transitions)"
      },
      {
        "name": "ECC_Weapon",
        "type": "trace",
        "defaultResponse": "ignore",
        "description": "Melee weapon hitboxes"
      },
      {
        "name": "ECC_Camera",
        "type": "trace",
        "defaultResponse": "block",
        "description": "Camera collision traces"
      },
      {
        "name": "ECC_Visibility",
        "type": "trace",
        "defaultResponse": "block",
        "description": "Line of sight checks"
      }
    ]
  },
  "collisionProfiles": {
    "description": "Preset collision profiles for common object types",
    "profiles": [
      {
        "name": "PlayerCharacter",
        "objectType": "ECC_Player",
        "responses": {
          "worldStatic": "block",
          "worldDynamic": "block",
          "ECC_Player": "overlap",
          "ECC_NPC": "block",
          "ECC_Enemy": "block",
          "ECC_Projectile": "overlap",
          "ECC_Interactable": "overlap",
          "ECC_Trigger": "overlap",
          "ECC_Weapon": "block"
        },
        "capsule": {
          "radius": 42,
          "halfHeight": 96
        }
      },
      {
        "name": "EnemyCharacter",
        "objectType": "ECC_Enemy",
        "responses": {
          "worldStatic": "block",
          "worldDynamic": "block",
          "ECC_Player": "block",
          "ECC_NPC": "overlap",
          "ECC_Enemy": "overlap",
          "ECC_Projectile": "overlap",
          "ECC_Interactable": "ignore",
          "ECC_Trigger": "overlap",
          "ECC_Weapon": "block"
        },
        "capsule": {
          "radiusRange": [30, 200],
          "halfHeightRange": [60, 400]
        }
      },
      {
        "name": "FriendlyNPC",
        "objectType": "ECC_NPC",
        "responses": {
          "worldStatic": "block",
          "worldDynamic": "block",
          "ECC_Player": "block",
          "ECC_NPC": "block",
          "ECC_Enemy": "ignore",
          "ECC_Projectile": "ignore",
          "ECC_Interactable": "ignore",
          "ECC_Trigger": "ignore"
        },
        "capsule": {
          "radius": 42,
          "halfHeight": 96
        }
      },
      {
        "name": "Projectile",
        "objectType": "ECC_Projectile",
        "responses": {
          "worldStatic": "block",
          "worldDynamic": "block",
          "ECC_Player": "overlap",
          "ECC_NPC": "ignore",
          "ECC_Enemy": "overlap",
          "ECC_Projectile": "ignore",
          "ECC_Interactable": "ignore",
          "ECC_Trigger": "ignore"
        },
        "sphere": {
          "radiusRange": [5, 50]
        }
      },
      {
        "name": "InteractableObject",
        "objectType": "ECC_Interactable",
        "responses": {
          "worldStatic": "ignore",
          "worldDynamic": "ignore",
          "ECC_Player": "overlap",
          "ECC_NPC": "ignore",
          "ECC_Enemy": "ignore",
          "ECC_Projectile": "ignore",
          "ECC_Camera": "block"
        }
      },
      {
        "name": "ResourceNode",
        "objectType": "ECC_Interactable",
        "responses": {
          "worldStatic": "ignore",
          "worldDynamic": "ignore",
          "ECC_Player": "overlap",
          "ECC_Camera": "block",
          "ECC_Visibility": "block"
        },
        "box": {
          "defaultExtent": [50, 50, 100]
        }
      },
      {
        "name": "TriggerVolume",
        "objectType": "ECC_Trigger",
        "responses": {
          "ECC_Player": "overlap",
          "ECC_NPC": "ignore",
          "ECC_Enemy": "overlap"
        },
        "collision": "queryOnly"
      },
      {
        "name": "WeaponHitbox",
        "objectType": "ECC_Weapon",
        "responses": {
          "ECC_Player": "overlap",
          "ECC_NPC": "ignore",
          "ECC_Enemy": "overlap"
        },
        "collision": "queryOnly"
      }
    ]
  },
  "physicsSettings": {
    "global": {
      "gravity": -980,
      "defaultLinearDamping": 0.01,
      "defaultAngularDamping": 0.05,
      "maxAngularVelocity": 3600,
      "bounceThreshold": 200,
      "frictionCombineMode": "average",
      "restitutionCombineMode": "average"
    },
    "substepping": {
      "enabled": true,
      "maxSubsteps": 6,
      "maxSubstepDeltaTime": 0.016667
    },
    "async": {
      "enabled": true,
      "interpolationEnabled": true
    }
  },
