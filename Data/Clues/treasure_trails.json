  "clueTypes": {
    "anagram": {
      "description": "Solve an anagram to find an NPC to talk to",
      "difficulty": ["easy", "medium", "hard"],
      "examples": [
        { "anagram": "A BAKER", "solution": "Kabera", "npc": "kabera_the_cook", "location": "dawnhaven" },
        { "anagram": "DIM THUG", "solution": "Gudmith", "npc": "gudmith_smith", "location": "ironhold" },
        { "anagram": "COOL NERD", "solution": "Eldercon", "npc": "eldercon_sage", "location": "oraclestead" }
      ]
    },
    "cipher": {
      "description": "Decode a cipher to find a location",
      "difficulty": ["hard", "elite", "master"],
      "cipherType": "caesar",
      "examples": [
        { "cipher": "GDKKZUDK JDXJ", "shift": 1, "solution": "FROSTPEAK TEST", "location": "frostpeak_summit" }
      ]
    },
    "coordinates": {
      "description": "Navigate to specific coordinates and dig",
      "difficulty": ["medium", "hard", "elite"],
      "format": "XX degrees YY minutes north/south, XX degrees YY minutes east/west",
      "examples": [
        { "coords": "12.45N, 34.22E", "location": "desert_oasis", "zone": "scorched_wastes" }
      ]
    },
    "cryptic": {
      "description": "Solve a cryptic riddle to find a location or NPC",
      "difficulty": ["all"],
      "examples": [
        {
          "clue": "Where the sun meets the sea at dawn, dig where the first light falls.",
          "solution": "tidecrest_beach_east",
          "action": "dig"
        },
        {
          "clue": "The keeper of flames guards ancient knowledge. Seek wisdom from the eternal fire.",
          "solution": "firemaking_guild_master",
          "action": "talk"
        },
        {
          "clue": "In the belly of the mountain, where metal is born, search the northern forge.",
          "solution": "ironhold_forge_north",
          "action": "search"
        }
      ]
    },
    "emote": {
      "description": "Perform an emote at a specific location while wearing specific items",
      "difficulty": ["medium", "hard", "elite"],
      "examples": [
        {
          "clue": "Dance in the moonlight atop the wizard's tower while wearing mystic robes.",
          "location": "mages_guild_tower",
          "emote": "dance",
          "equipment": ["mystic_robe_top", "mystic_robe_bottom"],
          "timeRestriction": "night"
        },
        {
          "clue": "Bow before the king while wearing full eternium.",
          "location": "throne_room",
          "emote": "bow",
          "equipment": ["eternium_full_helm", "eternium_platebody", "eternium_platelegs"]
        }
      ]
    },
    "hotCold": {
      "description": "Use a strange device to locate buried treasure",
      "difficulty": ["master"],
      "device": "strange_device",
      "temperatures": ["ice_cold", "very_cold", "cold", "warm", "hot", "very_hot", "infernal"],
      "searchRadius": { "min": 5, "max": 200 }
    },
    "map": {
      "description": "A map showing an X marking the spot",
      "difficulty": ["beginner", "easy", "medium"],
      "mapTypes": ["region_map", "local_map", "building_map"],
      "action": "dig"
    },
    "puzzle": {
      "description": "Solve a puzzle box or other interactive puzzle",
      "difficulty": ["hard", "elite", "master"],
      "puzzleTypes": [
        {
          "id": "sliding_puzzle",
          "name": "Puzzle Box",
          "description": "Rearrange tiles to form an image",
          "gridSize": { "hard": "3x3", "elite": "4x4", "master": "5x5" }
        },
        {
          "id": "light_puzzle",
          "name": "Light Box",
          "description": "Toggle lights to turn them all on/off",
          "gridSize": "5x5"
        },
        {
          "id": "celtic_knot",
          "name": "Celtic Knot",
          "description": "Rotate rings to complete the pattern",
          "rings": { "elite": 3, "master": 4 }
        }
      ]
    },
    "scan": {
      "description": "Use a scan clue to locate the dig spot in an area",
      "difficulty": ["elite", "master"],
      "scanRanges": { "elite": 18, "master": 24 },
      "areas": ["wilderness_volcano", "ancient_cavern", "prismatic_forest"]
    },
    "skill_challenge": {
      "description": "Complete a skill-related challenge",
      "difficulty": ["hard", "elite", "master"],
      "examples": [
        {
          "clue": "Catch 5 ironjaw fish without leaving the fishing spot.",
          "skill": "fishing",
          "requirement": { "fish": "ironjaw", "count": 5, "consecutive": true }
        },
        {
          "clue": "Mine 10 eternium ore in one session.",
          "skill": "mining",
          "requirement": { "ore": "eternium_ore", "count": 10 }
        }
      ]
    },
    "combat_challenge": {
      "description": "Defeat enemies with specific conditions",
      "difficulty": ["hard", "elite", "master"],
      "examples": [
        {
          "clue": "Defeat the ancient guardian using only magic.",
          "enemy": "ancient_guardian",
          "restriction": "magic_only",
          "location": "ancient_temple"
        }
      ]
    }
