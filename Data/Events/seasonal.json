{
  "meta": {
    "version": "1.0.0",
    "description": "Seasonal and holiday events for Realm of Eternity"
  },
  "events": [
    {
      "id": "winterfest",
      "name": "Winterfest",
      "description": "Celebrate the winter season with snow, gifts, and festivities",
      "schedule": {
        "startDate": "12-15",
        "endDate": "01-05",
        "annual": true
      },
      "theme": {
        "primaryColor": "#A8D5FF",
        "secondaryColor": "#FFFFFF",
        "ambiance": "winter_wonderland"
      },
      "worldChanges": {
        "snow": {
          "zones": ["dawnhaven", "whiteguard", "frostpeak", "ironhold"],
          "intensity": 0.8
        },
        "decorations": ["christmas_tree", "hanging_lights", "snowman", "ice_sculptures"],
        "npcOutfits": true,
        "music": "winterfest_theme"
      },
      "activities": [
        {
          "id": "gift_giving",
          "name": "Gift Exchange",
          "description": "Exchange gifts with other players",
          "type": "social",
          "rewards": [
            { "id": "mystery_gift", "chance": 1.0 },
            { "id": "winterfest_token", "quantity": 5 }
          ]
        },
        {
          "id": "snowball_fight",
          "name": "Snowball Fight",
          "description": "PvP minigame with snowballs",
          "type": "minigame",
          "location": "winterfest_arena",
          "rewards": [
            { "id": "winterfest_token", "quantity": 10, "condition": "win" },
            { "id": "winterfest_token", "quantity": 5, "condition": "participate" }
          ]
        },
        {
          "id": "ice_skating",
          "name": "Ice Skating",
          "description": "Skate around the frozen lake",
          "type": "skilling",
          "skill": "agility",
          "xpBonus": 1.5,
          "location": "frozen_lake"
        },
        {
          "id": "frost_boss",
          "name": "Frost Giant Raid",
          "description": "Defeat the awakened Frost Giant",
          "type": "boss",
          "location": "frostpeak_summit",
          "difficulty": "hard",
          "rewards": [
            { "id": "frost_giant_trophy", "chance": 0.1 },
            { "id": "ice_crown", "chance": 0.01 },
            { "id": "winterfest_token", "quantity": 50 }
          ]
        }
      ],
      "shop": {
        "currency": "winterfest_token",
        "items": [
          { "id": "winter_scarf", "cost": 100, "description": "Cozy neck cosmetic" },
          { "id": "snow_cape", "cost": 500, "description": "Snow-particle cape" },
          { "id": "ice_crown", "cost": 1000, "description": "Crown of eternal ice" },
          { "id": "penguin_pet", "cost": 2000, "description": "Adorable companion" },
          { "id": "frost_aura", "cost": 3000, "description": "Icy visual effect" },
          { "id": "xp_lamp_large", "cost": 200, "limit": 10 },
          { "id": "bonus_xp_star", "cost": 150, "limit": 20 }
        ]
      },
      "achievements": [
        { "id": "winterfest_participant", "name": "Winter Wonderland", "requirement": "participate_in_winterfest" },
        { "id": "gift_giver", "name": "Generous Soul", "requirement": "give_100_gifts" },
        { "id": "frost_slayer", "name": "Frost Giant Slayer", "requirement": "defeat_frost_giant_10" }
      ]
    },
    {
      "id": "lunar_festival",
      "name": "Lunar Festival",
