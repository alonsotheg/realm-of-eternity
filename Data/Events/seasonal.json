            { "id": "gold_coins", "quantityMin": 1000, "quantityMax": 100000, "chance": 0.9 },
            { "id": "lunar_token", "quantity": 10, "chance": 0.5 },
            { "id": "lucky_pet", "chance": 0.001 }
          ]
        }
      ],
      "shop": {
        "currency": "lunar_token",
        "items": [
          { "id": "dragon_mask", "cost": 200 },
          { "id": "lucky_robes", "cost": 500 },
          { "id": "paper_lantern_pet", "cost": 1500 },
          { "id": "dragon_firework_emote", "cost": 800 }
        ]
      }
    },
    {
